<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="444.0" prefWidth="430.0" styleClass="body" stylesheets="@../CSS/LoginRegister.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFX.LogInFX">
   <children>
      <VBox fx:id="loginVbox" alignment="CENTER" layoutX="90.0" layoutY="97.0" prefHeight="250.0" prefWidth="250.0" spacing="10.0" styleClass="loginVbox">
         <children>
            <Label alignment="CENTER" text="Log In">
               <font>
                  <Font name="Arial" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="userLogInField" alignment="CENTER" pickOnBounds="false" prefHeight="26.0" prefWidth="245.0" promptText="Username or email" />
            <Button fx:id="logInBut" alignment="CENTER" mnemonicParsing="false" onAction="#onLogIn" prefHeight="26.0" prefWidth="254.0" text="Log In">
               <VBox.margin>
                  <Insets bottom="-5.0" top="-5.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" prefHeight="18.0" prefWidth="250.0">
               <children>
                  <Label alignment="CENTER" text="Don't have a log in? Register" />
                  <Hyperlink fx:id="registerHL" onAction="#switchToRegister" text="here!" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
